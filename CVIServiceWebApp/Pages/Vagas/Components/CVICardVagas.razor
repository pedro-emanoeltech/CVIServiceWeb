@inherits CVICard

@{
    base.BuildRenderTree(__builder);
}

@code {
    public override RenderFragment RenderCardContent()
    {
        return
    @<text>
        <MudText Typo="Typo.h5" >@VagaResponse.Titulo</MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Empresa</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@VagaResponse!.NomeEmpresa</MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Descrição</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@VagaResponse.Descricao </MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Requisitos</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@VagaResponse.Requisitos</MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Beneficios</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@VagaResponse.Beneficio</MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Modalidade</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@VagaResponse.ModalidadeTrabalho.ToString()</MudText>


    </text>
        ;
    }
    public override RenderFragment RenderCardHeaderActions()
    {
        return
      @<text>
          <MudRating SelectedValue="2" />
       
      </text>;
    }
    public override RenderFragment RenderCardContentActions()
    {
        return
    @<text>
        <MudSpacer/>
        <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Send" Color="Color.Primary">Aplicar-se</MudButton>
    </text>;
    }
    public override RenderFragment RenderHeaderContent()
    {
        return
    @<text>
        <MudText Typo="Typo.body1">@VagaResponse.Perfil!.Nome</MudText>
        <MudText Typo="Typo.body2">@VagaResponse.Perfil!.Bio</MudText>

    </text>;
    }
    public override RenderFragment RenderCardHeaderAvatar()
    {
        return
    @<text>

        <MudAvatar Color="Color.Secondary">@VagaResponse.Perfil!.Nome[0].ToString()</MudAvatar>
    </text>;
    }

}
