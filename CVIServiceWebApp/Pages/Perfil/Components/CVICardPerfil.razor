@using CVIServiceLibShared.Constants.Enums;
@inherits CVICardResumo

@{
    base.BuildRenderTree(__builder);
}

@code {
    public override RenderFragment RenderCardContent()
    {
        return
    @<text>
        <MudText Typo="Typo.h6" Class="px-4">Nome Completo</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@PerfilResponse.Nome</MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">E-mail</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">
            @PerfilResponse.Contato.FirstOrDefault(p=>p.TipoContato.ToString() == TipoContato.Email.ToString())!.Texto
       
         </MudText>

        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Endereço</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@EnderecoCompleto</MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Telefone</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">
          @PerfilResponse.Contato.FirstOrDefault(p => p.TipoContato.ToString() == TipoContato.Telefone.ToString())!.Texto
                 
                </MudText>
                    <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Idade</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@PerfilResponse.Idade.ToString() Anos</MudText>
        <MudDivider Class="my-2"/>
        <MudText Typo="Typo.h6" Class="px-4">Nacionalidade</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@PerfilResponse.Nacionalidade!.NomePais</MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Estado Civil</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@PerfilResponse.EstadoCivil.ToString()</MudText>
        <MudDivider Class="my-2" />
        <MudText Typo="Typo.h6" Class="px-4">Escolaridade</MudText>
        <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@PerfilResponse.Escolaridade!.NivelAcademico.ToString()</MudText>
        <MudDivider Class="my-2" />
        </text>
    ;
    }
    public override RenderFragment RenderCardHeaderActions()
    {
        return CVICardHeaderActions;
    }
    public override RenderFragment RenderCardContentActions()
    {
        return CVICardContentActions;
    }
  
}
