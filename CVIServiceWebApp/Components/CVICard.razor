@inherits MudCard

@{
    base.BuildRenderTree(__builder);
}

<MudPaper Width="100%" Elevation="0">
    <MudCard>
        <MudCardHeader>
             <CardHeaderAvatar>
                @CVICardHeaderAvatar
             </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.h6"> @CVICardTitulo </MudText>
                @CVICardHeaderContents
            </CardHeaderContent>
            <CardHeaderActions>
                @CVICardHeaderActions
                @if (@AtivoBotaoPadrao)
                {
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color=" Color .Default " />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Disabled="@CVICardctionDelete" Color=" Color .Default " />
                }

            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            @CVICardContent
            <MudCardActions>
                @CVICardContentActions
            </MudCardActions>
        </MudCardContent>
    </MudCard>
</MudPaper>
